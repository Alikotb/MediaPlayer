<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.mediaplayer.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_splashFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_splashFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_splashFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.example.mediaplayer.AlbumsFragment"
        android:label="AlbumsFragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.mediaplayer.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/foldersFragment"
        android:name="com.example.mediaplayer.FoldersFragment"
        android:label="FoldersFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.mediaplayer.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mediaplayer.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/tracksFragment"
        android:name="com.example.mediaplayer.TracksFragment"
        android:label="TracksFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.mediaplayer.MainActivity"
        android:label="fragment_folders"
        tools:layout="@layout/fragment_folders" />
</navigation>